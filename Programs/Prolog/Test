solve(Amount, Moves) :-
    ( Amount==1 ->
    	write('amount')
    ;
    	( 0 is Amount mod 2 ->
        	write(Amount),
        	Amount is Amount div 2,
            write(Amount),
            Moves is Moves + 1
        ;
        	Amount is Amount - 1,
        	Moves is Moves + 1
        ),
        write(Amount),
        solve(Amount,Moves)
    ).

    

